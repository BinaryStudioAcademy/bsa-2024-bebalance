{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"noImplicitThis": true,

		"target": "ESNext",
		"lib": ["ESNext"],
		"module": "ESNext",
		"moduleResolution": "Node",

		"verbatimModuleSyntax": true,

		"baseUrl": ".",
		"paths": {
			"@app/assets/*": ["./assets/*"],
			"@app/*": ["./src/*"]
		}
	},

	"ts-node": {
		"emit": false,
		"transpileOnly": true,
		"files": true,

		"compilerOptions": {
			"module": "CommonJS"
		}
	},

	"include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"],

	"exclude": [
		"node_modules",
		"app.config.js",
		"babel.config.js",
		"metro.config.js",
		"prettier.config.js",
		"eslint.config.js"
	]
}
