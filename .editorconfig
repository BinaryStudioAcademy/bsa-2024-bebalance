root = true

[*]
indent_style = tab
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

[*.md]
indent_size = unset
indent_style = space

[*.yml]
indent_style = space

[*.yaml]
indent_style = space

[/apps/mobile/ios/**]
indent_size = unset
end_of_line = unset
trim_trailing_whitespace = unset
insert_final_newline = unset
indent_style = unset

[/apps/mobile/android/**]
indent_size = unset
end_of_line = unset
trim_trailing_whitespace = unset
insert_final_newline = unset
indent_style = unset

[/apps/mobile/Gemfile.lock]
indent_size = unset
indent_style = unset
